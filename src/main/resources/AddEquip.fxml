<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx/21"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="br.gov.smr.buscadorsmr.AddEquipController"
          hgap="10" vgap="10">
    <padding>
    	  <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
    </padding>

    <!-- Rótulos e campos para cada dado -->
    <Label text="Nº BM:"    GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="txtNroBM" GridPane.rowIndex="0" GridPane.columnIndex="1" />

    <Label text="ID:"       GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="txtId" GridPane.rowIndex="1" GridPane.columnIndex="1" />

    <Label text="Série:"    GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="txtSerie" GridPane.rowIndex="2" GridPane.columnIndex="1" />

    <Label text="Marca Radio:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="txtMarcaRadio" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Modelo Radio:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="txtModeloRadio" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Prefixo VTR:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="txtPrefixoVtr" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Label text="Placas:"   GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <TextField fx:id="txtPlacas" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <Label text="Modelo VTR:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
    <TextField fx:id="txtModeloVtr" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

    <Label text="Comando:"  GridPane.rowIndex="8" GridPane.columnIndex="0"/>
    <TextField fx:id="txtComando" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

    <Label text="OPM:"      GridPane.rowIndex="9" GridPane.columnIndex="0"/>
    <TextField fx:id="txtOpm" GridPane.rowIndex="9" GridPane.columnIndex="1"/>

    <Label text="Município:" GridPane.rowIndex="10" GridPane.columnIndex="0"/>
    <TextField fx:id="txtMunicipio" GridPane.rowIndex="10" GridPane.columnIndex="1"/>

    <Label text="Observação:" GridPane.rowIndex="11" GridPane.columnIndex="0"/>
    <TextField fx:id="txtObservacao" GridPane.rowIndex="11" GridPane.columnIndex="1"/>

    <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.rowIndex="12" GridPane.columnIndex="1">
       <Button text="Cancelar" onAction="#onCancel"/>
       <Button text="Salvar"   onAction="#onSave"/>
    </HBox>
</GridPane>
